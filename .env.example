# Environment Variables Template
# Copy this file to .env and fill in your own values
# DO NOT commit the actual .env file to git!

# JWT Secret Key - Generate a strong random key in production
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Default Admin Credentials (for initial setup only)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@yourcompany.com
DEFAULT_ADMIN_PASSWORD=change-this-secure-password

# Email Configuration for User Approval Notifications
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Admin notification email for user approval requests
ADMIN_NOTIFICATION_EMAIL=tjohnson@123.net

# App URL for email links (update for production)
APP_URL=http://localhost:3000

# Server Configuration
AUTH_SERVER_PORT=3002
SSH_WS_SERVER_PORT=3001
VITE_SERVER_PORT=3000
PROXY_PORT=3000

# Environment
NODE_ENV=development

# Additional Admin Users
# Set to true to automatically create additional admin users on startup
CREATE_ADMIN_USERS=false
